<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ContentTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/content_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">#ff000000</item>



    </style>

    <style name="CourseButtonPortBottom">
        <item name="android:onClick">nanoToast</item>
        <item name="android:background">#ffff3242</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:width">180dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CourseButtonPort">
        <item name="android:onClick">nanoToast</item>
        <item name="android:background">#ffffa316</item>
        <item name="android:width">180dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
